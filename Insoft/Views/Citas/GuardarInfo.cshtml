@model Insoft.Models.CitaGuardarViewModel
@{
    ViewBag.Title = "Guardar Info";
}
<h2>Guardar Info</h2>
@using (Html.BeginForm("GuardarInfo", "Citas", FormMethod.Post))
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>CITAS: Crear cita</h4>
    <hr />
    @Html.ValidationSummary(true)
       
    <div class="form-group">
        @Html.LabelFor(model => model.Fecha, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Fecha, "{0:yyyy-MM-dd}", new { type = "date" })
            
            @Html.ValidationMessageFor(model => model.Fecha)
        </div>
    </div>
   <div class="form-group">
        @Html.LabelFor(model => model.Estado, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Estado)
            @Html.ValidationMessageFor(model => model.Estado)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" name="BtnPrevious" value="Previous" class="btn btn-default" />
            <input type="submit" name="BtnNext" value="Finish" class="btn btn-default" />
            <input type="submit" name="BtnCancel" value="Cancel" class="btn btn-danger" />
        </div>
    </div>
</div>
} 